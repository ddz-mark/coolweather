<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dudaizhong.coolweather">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/weather"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >
        <activity android:name="com.example.dudaizhong.coolweather.activity.WeatherActivity"
            ></activity>

        <activity
            android:name="com.example.dudaizhong.coolweather.activity.ChooseAreaActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name=".service.AutoUpdateService">

        </service>

        <receiver android:name=".receiver.AutoUpdateReceiver">

        </receiver>
    </application>


</manifest>